.status_bar {
  height: 25px;
  width: 100%;
}
.head_bg {
  z-index: 100;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #50d8be;
  border-radius: 0 0 100rpx 100rpx;
}
.head_bg .head {
  height: 100rpx;
  width: calc(100% - 95px);
}
.head_bg .head image {
  height: 38rpx;
  width: 38rpx;
  margin-left: 50rpx;
  margin-top: 31rpx;
}
.head_bg .head .head_txt {
  font-size: 45rpx;
  font-weight: bold;
  color: white;
  margin-left: 215rpx;
}
.page {
  margin-top: 180rpx;
  display: flex;
  height: calc(100vh - 10rpx);
  overflow: hidden;
}
.page .left {
  width: 170rpx;
  height: 100%;
}
.page .left .item {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  margin: 68rpx 0;
  text-align: center;
  position: relative;
}
.page .left .item.active {
  font-weight: bold;
}
.page .left .item.active::before {
  display: block;
  content: "";
  width: 8rpx;
  height: 100%;
  background-color: #50d8be;
  position: absolute;
  left: 0;
  top: 0;
}
.page .right {
  flex: 1;
  padding-left: 20rpx;
  padding-right: 40rpx;
  box-shadow: 5rpx 5rpx 10rpx 5rpx #808080;
}
.page .right .title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
}
.page .right .good_item {
  display: flex;
  background-color: #f7f7f7;
  box-shadow: 5rpx 5rpx 10rpx 5rpx #808080;
  border-radius: 10rpx;
  height: 150rpx;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  line-height: 55rpx;
  font-size: 28rpx;
  margin-bottom: 15rpx;
}
.page .right .good_item .good_img {
  width: 83rpx;
  height: 110rpx;
  margin-right: 35rpx;
  box-shadow: 5rpx 5rpx 10rpx 5rpx #808080;
}

