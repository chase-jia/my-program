.status_bar {
  height: 25px;
  width: 100%;
}
.head_bg {
  z-index: 100;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #50d8be;
  border-radius: 0 0 100rpx 100rpx;
}
.head_bg .head {
  height: 100rpx;
  width: calc(100% - 95px);
}
.head_bg .head image {
  height: 38rpx;
  width: 38rpx;
  margin-left: 50rpx;
  margin-top: 31rpx;
}
.head_bg .head .head_txt {
  font-size: 45rpx;
  font-weight: bold;
  color: white;
  margin-left: 215rpx;
}
.top {
  position: relative;
  width: 700rpx;
  height: 200rpx;
  background-color: #ffffff;
  margin: 250rpx 25rpx 0 25rpx;
  border-radius: 30rpx;
  display: flex;
  box-shadow: 5rpx 5rpx 10rpx 5rpx #808080;
}
.top image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-left: 35rpx;
  margin-top: 10rpx;
}
.top .top1 {
  height: 100rpx;
  margin-left: 30rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.top .top1 .top11 {
  height: 30rpx;
  font-size: 30rpx;
}
.top .top1 .top12 {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #808080;
}
.top .top1 .top13 {
  margin-top: 40rpx;
  font-size: 27rpx;
}
.top .top2 {
  width: 180rpx;
  height: 60rpx;
  display: flex;
  position: absolute;
  right: 0;
  top: 0;
}
.top .top2 image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 0;
}
.top .top2 .top21 {
  height: 60rpx;
  font-size: 25rpx;
  margin-left: 10rpx;
  line-height: 60rpx;
}
.middle {
  height: 350rpx;
  width: 100%;
  margin-top: 65rpx;
  display: flex;
  flex-direction: column;
}
.middle .md1 {
  font-size: 35rpx;
  font-weight: bold;
  color: #50d8be;
  margin-left: 25rpx;
}
.middle .md2 {
  height: 275rpx;
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  padding: 0 100rpx 0 100rpx;
  justify-content: space-between;
}
.middle .md2 .md21 {
  width: 220rpx;
  height: 275rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.middle .md2 .md21 .md211 {
  margin-top: 50rpx;
  font-size: 120rpx;
}
.middle .md2 .md22 {
  width: 220rpx;
  height: 275rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.middle .md2 .md22 .md221 {
  margin-top: 50rpx;
  font-size: 120rpx;
}
.pingjia {
  width: 100%;
  height: 430rpx;
}
.pingjia .pj1 {
  font-size: 35rpx;
  font-weight: bold;
  color: #50d8be;
  margin-left: 25rpx;
}
.pingjia .pj2 {
  display: flex;
}
.pingjia .pj2 .pj21, .pingjia .pj2 .pj22 {
  height: 290rpx;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  margin-left: 100rpx;
}
.pingjia .pj2 .pj22 {
  color: #50d8be;
  font-weight: bold;
}
