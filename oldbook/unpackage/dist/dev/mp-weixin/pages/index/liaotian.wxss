.status_bar {
  height: 25px;
  width: 100%;
}
.head_bg {
  z-index: 100;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #50d8be;
}
.head_bg .head {
  height: 100rpx;
  width: calc(100% - 95px);
}
.head_bg .head image {
  height: 38rpx;
  width: 38rpx;
  margin-left: 50rpx;
  margin-top: 31rpx;
}
.head_bg .head .head_txt {
  font-size: 45rpx;
  color: white;
  margin-left: 25rpx;
}
.kuang {
  margin-top: 100rpx;
  width: 100%;
  padding-top: 50rpx;
}
.kuang .k1 {
  position: relative;
  margin-right: 15rpx;
  margin-top: 30rpx;
  width: 700rpx;
  height: 80rpx;
  display: flex;
}
.kuang .k1 image {
  position: absolute;
  right: 0;
  top: 0rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.kuang .k1 .k11 {
  position: absolute;
  right: 65rpx;
  width: 300rpx;
  height: 80rpx;
  background-color: #50d8be;
  text-align: center;
  line-height: 80rpx;
  color: white;
  font-size: 25rpx;
  border-radius: 20rpx;
}
.bottom {
  z-index: 100;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background-color: #808080;
  display: flex;
}
.bottom .bt1 {
  margin-left: 20rpx;
  margin-top: 10rpx;
  height: 80rpx;
  width: 580rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
}
.bottom .bt2 {
  margin-top: 10rpx;
  margin-left: 10rpx;
  width: 120rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #50d8be;
  font-size: 35rpx;
  color: white;
  text-align: center;
  line-height: 80rpx;
}

