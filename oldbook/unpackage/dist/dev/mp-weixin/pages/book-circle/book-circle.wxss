.status_bar {
  height: 25px;
  width: 100%;
}
.main {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
  background: white;
  box-sizing: border-box;
  background-color: #50d8be;
  left: 0;
}
.main .head {
  width: calc(100% - 95px);
  display: flex;
  white-space: nowrap;
  height: 80rpx;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
}
.main .head .name {
  color: white;
}
.main .head .pone {
  height: 60rpx;
  width: 60rpx;
  margin: 0 15rpx;
}
.overall .main-body .maincontent {
  margin-top: 150rpx;
  width: 100%;
  min-height: 780rpx;
  margin-bottom: 100rpx;
}
.overall .main-body .maincontent .headone {
  display: flex;
  justify-content: left;
  align-items: center;
}
.overall .main-body .maincontent .headone .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 5rpx 15rpx;
}
.overall .main-body .maincontent .feeling {
  width: 98%;
  padding: 0 1%;
}
.overall .main-body .maincontent .feeling .feel {
  font-size: 35rpx;
}
.overall .main-body .maincontent .big {
  width: 98%;
