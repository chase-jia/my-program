.status_bar {
  height: 25px;
  width: 100%;
}
.tou {
  position: fixed;
  height: 100rpx;
  width: 100%;
  z-index: 5;
  top: 0;
  left: 0;
  background-color: #50d8be;
  box-sizing: border-box;
}
.tou .top {
  width: 100%;
  height: 90rpx;
  background-color: #50d8be;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tou .top .jt {
  position: absolute;
  width: 45rpx;
  height: 45rpx;
  left: 50rpx;
  font-size: 45rpx;
}
.tou .top .zi {
  position: absolute;
  color: #393939;
  font-size: 45rpx;
  border-bottom: 6rpx #FFFFFF solid;
  font-weight: bold;
}
.emp {
  width: 100%;
  height: 200rpx;
}
.txiang {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  border-top: 6rpx #c7c7c7 dashed;
  border-bottom: 6rpx #c7c7c7 dashed;
}
.txiang image {
  margin-right: 50rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}
.xiugai {
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  border-top: 6rpx #c7c7c7 dashed;
  border-bottom: 6rpx #c7c7c7 dashed;
}
.xiugai input {
  margin-right: 50rpx;
  color: #50d8be;
  font-size: 30rpx;
}
.accomplish {
  margin-top: 70rpx;
  background-color: #8de7e8;
  width: 250rpx;
  height: 100rpx;
  display: flex;
  line-height: 100rpx;
  border-radius: 50rpx;
}
.accomplish text {
  padding-left: 30%;
}

